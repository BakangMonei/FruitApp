<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/idImageViewFruit"
        android:layout_width="100dp"
        android:src="@drawable/mango"
        android:layout_height="100dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/idTextViewFruitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Fruit Name"
            android:textColor="#000000"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/idTextViewFruitDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="cursive"
            android:text="Lorem ipsum great flavour rich in antioxidants..."
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/idTextViewFruitPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="P8.50"
            android:textStyle="bold|italic"
            android:textColor="@color/deep_red"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>